<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.eventsharing.zhewenboming.eventsharing.Activities.HomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Event"
                android:id="@+id/eventLabel"
                android:layout_weight="3" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Hello"
                android:id="@+id/helloTextView"
                android:singleLine="false"
                android:layout_weight="2" />
        </LinearLayout>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/eventListView"
            android:layout_weight="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Circle"
            android:id="@+id/circleLabel" />

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:id="@+id/circleListView"
            android:layout_weight="5" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:baselineAligned="false">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+Event"
                android:id="@+id/addEventButton"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_weight="3" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="+Circle"
                android:id="@+id/addCircleButton"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_weight="3" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="LOG OFF"
                android:id="@+id/logoffButton"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_weight="2" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
